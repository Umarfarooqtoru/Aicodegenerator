{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/Scripts/streamlit",
            "args": [
                "run",
                "app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Flask API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/flask_app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            }
        }
    ]
}

